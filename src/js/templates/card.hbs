<a class='gallery__card' href='{{largeImageURL}}'>
  <img class='gallery__img' src='{{webformatURL}}' alt='{{tags}}' title='{{tags}}' loading='lazy' />
  <div class='info'>
    <p class='info__item'>
      <b>Likes</b>
      {{likes}}
    </p>
    <p class='info__item'>
      <b>Views</b>
      {{views}}
    </p>
    <p class='info__item'>
      <b>Comments</b>
      {{comments}}
    </p>
    <p class='info__item'>
      <b>Downloads</b>
      {{downloads}}
    </p>
  </div>

</a>